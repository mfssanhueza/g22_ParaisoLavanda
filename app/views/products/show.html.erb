
<div class="card">
  <div class="card-header"></div>
  <div class="card-body">
    <h3 class="card-title"><%= @product.name %></h3>
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @product.picture, class:'img-fluid product_image'%>
      </div>
      <div class="col-md-6">
        <h5>Descripción del producto:</h5>
        <p><%= @product.description %></p>
        <h5>Instrucciones de uso:</h5>
        <p><%= @product.instructions %></p>
      </div>
    </div>
    <br>
    <%= link_to '<<Volver', products_path, class:'btn btn-primary'%>
    <%= link_to 'Agregar al carro', shopping_carts_path(product_id: @product.id), method: :POST, class:'btn btn-outline-success' %>
  </div>
</div>
